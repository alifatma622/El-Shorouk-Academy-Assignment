@{
    ViewData["Title"] = "Register";
}

<style>
    .register-container {
        background: white;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        margin-bottom: 110px;
    }

    .register-content {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        flex-wrap: wrap;
        /* gap: 1px;  */
        flex-direction: row-reverse;
    }

    .register-image {
        flex: 1;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding-right: 10px;
    }

        .register-image img {
            width: 100%;
            max-width: 550px;
            height:729px;
            /* border-radius: 15px; */
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

    .register-card {
        flex: 1;
        background: white;
        /* border-radius: 15px; */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        padding: 40px 30px;
        max-width: 500px;
    }

    .register-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .register-title {
        color: #0f4279;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .register-subtitle {
        color: #6c757d;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0f4279;
            box-shadow: 0 0 0 0.2rem rgba(15, 66, 121, 0.25);
            outline: none;
        }

    .btn-register {
        background: linear-gradient(135deg, #0f4279 0%, #1a5a9e 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(15, 66, 121, 0.3);
        }

    .register-footer {
        text-align: center;
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid #e9ecef;
    }

    .register-link {
        color: #0f4279;
        text-decoration: none;
        font-weight: 600;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    .validation-error {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .form-control-with-icon {
        padding-left: 45px;
    }

    .row {
        display: flex;
        gap: 15px;
    }

    .col {
        flex: 1;
    }

    @@media (max-width: 768px) {
        .register-content

    {
        flex-direction: column;
        gap: 20px;
    }

    .register-card {
        padding: 30px 20px;
    }

    .row {
        flex-direction: column;
        gap: 0;
    }

    .register-image {
        justify-content: center;
        padding: 0;
    }

    }
</style>

<div class="register-container">
    <div class="register-content">
        <div class="register-image">
            <img src="/images/sign up.jpg" alt="Register Image" />
        </div>

        <div class="register-card">
            <div class="register-header">
                <h1 class="register-title">
                    <i class="bi bi-person-plus me-2"></i>
                    Create Account
                </h1>
                <p class="register-subtitle">Join our invoice management system</p>
            </div>

            <form asp-action="Register" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-person me-1"></i>
                                First Name
                            </label>
                            <div class="input-group">
                                <i class="bi bi-person input-icon"></i>
                                <input type="text" name="firstName" class="form-control form-control-with-icon"
                                       placeholder="Enter first name" required />
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-person me-1"></i>
                                Last Name
                            </label>
                            <div class="input-group">
                                <i class="bi bi-person input-icon"></i>
                                <input type="text" name="lastName" class="form-control form-control-with-icon"
                                       placeholder="Enter last name" required />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-envelope me-1"></i>
                        Email Address
                    </label>
                    <div class="input-group">
                        <i class="bi bi-envelope input-icon"></i>
                        <input type="email" name="email" class="form-control form-control-with-icon"
                               placeholder="Enter your email" required />
                    </div>
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["email"]?.Errors?.Count > 0)
                    {
                        <div class="validation-error">@ViewData.ModelState["email"]?.Errors?.First()?.ErrorMessage</div>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-lock me-1"></i>
                        Password
                    </label>
                    <div class="input-group">
                        <i class="bi bi-lock input-icon"></i>
                        <input type="password" name="password" class="form-control form-control-with-icon"
                               placeholder="Enter password (min 6 characters)" required />
                    </div>
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["password"]?.Errors?.Count > 0)
                    {
                        <div class="validation-error">@ViewData.ModelState["password"]?.Errors?.First()?.ErrorMessage</div>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-lock me-1"></i>
                        Confirm Password
                    </label>
                    <div class="input-group">
                        <i class="bi bi-lock input-icon"></i>
                        <input type="password" name="confirmPassword" class="form-control form-control-with-icon"
                               placeholder="Confirm your password" required />
                    </div>
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["confirmPassword"]?.Errors?.Count > 0)
                    {
                        <div class="validation-error">@ViewData.ModelState["confirmPassword"]?.Errors?.First()?.ErrorMessage</div>
                    }
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-error">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <button type="submit" class="btn-register">
                    <i class="bi bi-person-plus me-2"></i>
                    Create Account
                </button>
            </form>

            <div class="register-footer">
                <p>
                    Already have an account?
                    <a asp-action="Login" class="register-link">Sign in here</a>
                </p>
            </div>
        </div>
    </div>
</div>
