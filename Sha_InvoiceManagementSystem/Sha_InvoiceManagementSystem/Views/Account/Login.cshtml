@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
        background: #f8f9fa;
    }

    .login-image-section {
        flex: 1;
        background: linear-gradient(135deg, #0f4279 0%, #1a5a9e 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .login-image-content {
        text-align: center;
        color: white;
        z-index: 2;
        padding: 40px;
    }

    .login-image-content h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .login-image-content p {
        font-size: 1.2rem;
        opacity: 0.9;
        line-height: 1.6;
    }

    .login-image-placeholder {
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border: 3px dashed rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 30px auto;
        transition: all 0.3s ease;
    }

    .login-image-placeholder:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.5);
    }

    .login-image-placeholder i {
        font-size: 4rem;
        opacity: 0.7;
    }

    .login-form-section {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        background: white;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        padding: 0;
    }

    .login-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .login-title {
        color: #0f4279;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .login-subtitle {
        color: #6c757d;
        font-size: 1rem;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 15px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

    .form-control:focus {
        border-color: #0f4279;
        box-shadow: 0 0 0 0.2rem rgba(15, 66, 121, 0.25);
        outline: none;
        background: white;
    }

    .btn-login {
        background: linear-gradient(135deg, #0f4279 0%, #1a5a9e 100%);
        color: white;
        border: none;
        padding: 15px 30px;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(15, 66, 121, 0.3);
    }

    .login-footer {
        text-align: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #e9ecef;
    }

    .login-link {
        color: #0f4279;
        text-decoration: none;
        font-weight: 600;
    }

    .login-link:hover {
        text-decoration: underline;
    }

    .validation-error {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 1;
    }

    .form-control-with-icon {
        padding-left: 45px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .login-container {
            flex-direction: column;
        }
        
        .login-image-section {
            min-height: 250px;
        }
        
        .login-image-content h2 {
            font-size: 2rem;
        }
        
        .login-image-placeholder {
            width: 200px;
            height: 200px;
            margin: 20px auto;
        }
        
        .login-image-placeholder i {
            font-size: 3rem;
        }
        
        .login-form-section {
            padding: 30px 20px;
        }
    }

    @media (max-width: 480px) {
        .login-form-section {
            padding: 20px 15px;
        }
        
        .login-image-content {
            padding: 20px;
        }
        
        .login-image-content h2 {
            font-size: 1.5rem;
        }
        
        .login-image-content p {
            font-size: 1rem;
        }
    }
</style>

<div class="login-container">
    <!-- Left side - Image Section -->
    <div class="login-image-section">
        <div class="login-image-content">
            <h2>Invoice Management System</h2>
            <div class="login-image-placeholder">
                <i class="bi bi-image"></i>
            </div>
            <p>Streamline your invoicing process with our powerful and intuitive platform</p>
        </div>
    </div>

    <!-- Right side - Login Form -->
    <div class="login-form-section">
        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">
                    <i class="bi bi-shield-lock me-2"></i>
                    Welcome Back
                </h1>
                <p class="login-subtitle">Sign in to your account</p>
            </div>

            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-envelope me-1"></i>
                        Email Address
                    </label>
                    <div class="input-group">
                        <i class="bi bi-envelope input-icon"></i>
                        <input type="email" name="email" class="form-control form-control-with-icon" 
                               placeholder="Enter your email" required />
                    </div>
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["email"]?.Errors?.Count > 0)
                    {
                        <div class="validation-error">@ViewData.ModelState["email"]?.Errors?.First()?.ErrorMessage</div>
                    }
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-lock me-1"></i>
                        Password
                    </label>
                    <div class="input-group">
                        <i class="bi bi-lock input-icon"></i>
                        <input type="password" name="password" class="form-control form-control-with-icon" 
                               placeholder="Enter your password" required />
                    </div>
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["password"]?.Errors?.Count > 0)
                    {
                        <div class="validation-error">@ViewData.ModelState["password"]?.Errors?.First()?.ErrorMessage</div>
                    }
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-error">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <button type="submit" class="btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Sign In
                </button>
            </form>

            <div class="login-footer">
                <p>Don't have an account? 
                    <a asp-action="Register" class="login-link">Sign up here</a>
                </p>
            </div>
        </div>
    </div>
</div> 